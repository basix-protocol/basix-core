{
  "name": "basix-core",
  "version": "1.0.0",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "truffle test",
    "flatten-all": "del-cli ./flatten && mkdir \\flatten && npm run flatten-oracle && npm run flatten-orchestrator && npm run flatten-ufragments && npm run flatten-ufragmentspolicy",
    "flatten-oracle": "truffle-flattener contracts/Oracle.sol > flatten/Oracle.sol",
    "flatten-orchestrator": "truffle-flattener contracts/Orchestrator.sol > flatten/Orchestrator.sol",
    "flatten-ufragments": "truffle-flattener contracts/UFragments.sol > flatten/UFragments.sol",
    "flatten-ufragmentspolicy": "truffle-flattener contracts/UFragmentsPolicy.sol > flatten/UFragmentsPolicy.sol"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/basix-protocol/basix-core.git"
